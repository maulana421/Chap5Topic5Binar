<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Chap5Theme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="AppTheme.TextMain" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="color">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/poppins_font</item>
    </style>
    <style name="custom_button" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="color">@color/black</item>
        <item name="backgroundTint">@color/teal_700</item>
        <item name="cornerRadius"> 10dp </item>
        <item name="fontFamily">@font/poppins_font</item>
    </style>
    <style name="custom_button_two" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="color">@color/black</item>
        <item name="backgroundTint">@color/teal_200</item>
        <item name="cornerRadius"> 10dp </item>
        <item name="fontFamily">@font/poppins_font</item>
    </style>
    <style name="custom_button_three" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="color">@color/black</item>
        <item name="backgroundTint">@color/palete</item>
        <item name="cornerRadius"> 10dp </item>
        <item name="fontFamily">@font/poppins_font</item>
    </style>
</resources>